/**index.wxss**/

image {
  width: 100%;
  height: 100%;
}

.top_b {
  margin-top: 50rpx;
  flex-direction: column;
}

.top_b image {
  width: 194rpx;
  height: 238rpx;
}

.top_b text {
  color: #c9c9c9;
  font-size: 30rpx;
  margin-top: 46rpx;
  letter-spacing: 5rpx;
}

page {
  background: rgb(243, 243, 243);
}

view {
  display: flex;
}

.container {
  display: flex;
  width: 100%;
  margin: 0 auto;
}

.slide_main {
  width: 100%;
  flex-direction: column;
  margin-top: 28rpx;
  background: #f3f3f3;
}

.slide_btn {
  display: flex;
  width: 100%;
  padding: 0 28rpx;
  box-sizing: border-box;
  flex-direction: row;
  overflow: hidden;
  background: #fff;
}

.slide_btn .slide_li {
  text-align: center;
  color: #8d8d8d;
}

.slide_btn .sel_tab {
  display: flex;
  color: #f04848;
  font-weight: bold;
}

.slide_btn text {
  width: 140rpx;
  text-align: center;
  margin: 28rpx 0;
  font-size: 28rpx;
}

.slide_img {
  display: block;
  width: 100%;
  height: 292rpx;
}

.swiper {
  height: 292rpx;
}

.new {
  width: 100%;
  height: 126rpx;
  overflow: hidden;
  position: relative;
}

.new_bg {
  width: 100%;
  height: 126rpx;
}

.new_text {
  position: absolute;
  top: 45rpx;
  left: 280rpx;
  color: #fdac09;
  font-size: 33rpx;
  letter-spacing: 20rpx;
}

.all_txt {
  width: 220rpx;
  text-align: center;
  position: absolute;
  left: 530rpx;
  top: 80rpx;
  color: #222;
  font-size: 26rpx;
}

.look_all {
  position: absolute;
  top: 0;
}

.ico_next {
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  left: 700rpx;
  top: 80rpx;
}

/*新品主图*/

.indent {
  width: 100%;
  padding: 15rpx 28rpx;
  box-sizing: border-box;
  background: #fff;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1px solid #eee;
  align-items: center;
}

.indent_num {
  color: #555;
  font-size: 30rpx;
}

.indent_state {
  color: #555;
  font-size: 30rpx;
}

.new_main_intro text {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 24rpx;
}

.new_main_money {
  margin-top: 40rpx;
  flex-direction: column;
  align-items: flex-end;
  width: 100%;
}

.money {
  color: #f04848;
  font-size: 26rpx;
}

.s_num {
  margin-top: 15rpx;
  color: #a1a1a1;
  font-size: 24rpx;
}

.moods {
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #fff;
}

.mood_list {
  display: flex;
  padding: 28rpx;
  box-sizing: border-box;
  overflow: hidden;
  /*height: 156rpx;*/
  width: 100%;
  border-bottom: 1rpx solid #eee;
}

.mood_list navigator {
  width: 100%;
  display: flex;
  background: none;
  flex-direction: row;
  overflow: hidden;
  height: 100%;
  justify-content: space-between;
}

.mood_main_left {
  width: 312rpx;
  height: 156rpx;
}

.mood_main_left image {
  width: 160rpx;
  height: 160rpx;
}

.mood_main_right {
  flex-direction: column;
  width: 375rpx;
  margin-left: 30rpx;
}

.new_main_title {
  margin: 25rpx 0 12rpx 0;
  font-size: 30rpx;
  color: #555;
}

.new_main_title text, .new_main_intro  text {
  width: 100%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.new_main_intro {
  width: 100%;
  margin: 25rpx 0 12rpx 0;
  font-size: 26rpx;
  color: #a1a1a1;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.total {
  width: 100%;
  justify-content: flex-end;
  padding: 28rpx 0;
  background: #fff;
  border-bottom: 1px solid #eee;
}

.all_shop {
  font-size: 26rpx;
  color: #555;
}

.all_money {
  font-size: 26rpx;
  color: #f04848;
  margin: 0 28rpx;
}

.btns {
  width: 100%;
  padding: 20rpx 28rpx;
  justify-content: flex-end;
  box-sizing: border-box;
  background: #fff;
}

.btn_a {
  width: 136rpx;
  height: 54rpx;
  border: 1px solid #222;
  margin-left: 18rpx;
  background: #fff;
  color: #222;
  font-size: 26rpx;
  justify-content: center;
  align-items: center;
}

.btn_b {
  width: 136rpx;
  height: 54rpx;
  background: rgb(240, 72, 72);
  border: 1px solid rgb(240, 72, 72);
  font-size: 26rpx;
  color: #fff;
  margin-left: 18rpx;
  justify-content: center;
  align-items: center;
}

.mask {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(170, 170, 170, 0.5);
}

.mask_main {
  width: 85%;
  height: 500rpx;
  margin: 45% auto;
  background: #fff;
  flex-direction: column;
}

.mask_title {
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1px solid #eee;
}

.indent_s_num {
  font-size: 32rpx;
  color: #555;
  margin: 28rpx;
}

.mask_close {
  width: 32rpx;
  height: 32rpx;
  margin: 28rpx;
}

.discuss {
  padding: 28rpx;
}

.discuss textarea {
  display: flex;
  background: #eee;
  padding: 10rpx;
  width: 100%;
  height: 230rpx;
}

.submit_discuss {
  justify-content: center;
  align-items: center;
}

.submit_discuss text {
  font-size: 26rpx;
  color: #fff;
  margin-bottom: 15rpx;
  justify-content: center;
  align-items: center;
  background: rgb(240, 72, 72);
  padding: 18rpx;
}
