@import "../wxParse/wxParse.wxss";

.title {
  height: 406rpx;
  width: 100%;
  overflow: hidden;
  flex-direction: row;
}

.container {
  padding-bottom: 150rpx;
}

.slide_tab {
  width: 100%;
  height: 406rpx;
}

.rotate90 {
  transform: rotate(90deg);
  transition: 300;
}

.slide_tab swiper {
  width: 100%;
  display: flex;
  height: 406rpx;
}

.shop_intro {
  width: 80%;
  margin: 36rpx auto;
  box-sizing: border-box;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.shop_intro .shop_title {
  font-size: 40rpx;
  color: #555;
}

.shop_intro .shop_info {
  color: #555;
  font-size: 24rpx;
  line-height: 40rpx;
  text-align: center;
}

.shop_intro .shop_money {
  font-size: 38rpx;
  color: #f04848;
}

.shop_main {
  width: 100%;
  flex-direction: column;
}

.shop_main_btn {
  width: 100%;
  padding: 28rpx;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  box-sizing: border-box;
  justify-content: space-between;
}

.sel_btn {
  font-size: 28rpx;
  color: #555;
}

.next_ico {
  width: 20rpx;
  height: 28rpx;
}

.shop_main_intro {
  flex-direction: column;
  border-bottom: 1px solid #eee;
  border-top: 1px solid #eee;
}

.shop_main_intro .shop_info_all {
  display: flex;
  width: 100%;
  padding: 28rpx;
  box-sizing: border-box;
  flex-direction: row;
}

.shop_main_intro .shop_img {
  width: 160rpx;
  height: 160rpx;
  overflow: hidden;
}

.shop_main_intro .shop_intro {
  margin: 22rpx 0 0 36rpx;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

.shop_main_intro .shop_title {
  font-size: 30rpx;
  color: #555;
}

.shop_main_intro .shop_money {
  margin-top: 35rpx;
  font-size: 26rpx;
  color: #f04848;
}

.shop_proto {
  flex-direction: column;
  padding: 28rpx;
  box-sizing: border-box;
  width: 100%;
}

.proto {
  flex-direction: row;
  flex-wrap: wrap;
  margin: 15rpx 0;
}

.protot_title {
  padding: 5rpx 0;
  font-size: 26rpx;
  color: #555;
  padding-right: 25rpx;
}

.protot_txt {
  padding: 5rpx 30rpx;
  font-size: 26rpx;
  color: #555;
  background: #eee;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
}

.shop_num {
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  padding: 28rpx;
  box-sizing: border-box;
}

.shop_num_edit {
  justify-content: space-between;
  flex-direction: row;
}

.shop_num_edit image {
  width: 54rpx;
  height: 42rpx;
}

.shop_num_edit text {
  font-size: 24rpx;
  color: #555;
  /*margin-top: 5rpx;*/
  margin: 5rpx 40rpx 0;
}

.bottom_btns {
  width: 100%;
  height: 84rpx;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  background: #fff;
  border-top: 1px solid #eee;
}

.bottom_btn {
  width: calc(100% /4);
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.bottom_btn text {
  color: #aeaeae;
  font-size: 24rpx;
}

.ico_btn {
  width: 35rpx;
  height: 34rpx;
}

.bottom_btn .txt_btn {
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  text-align: center;
  line-height: 84rpx;
  color: #fff;
}

.buy {
  background: #f04848;
}

.shop_car {
  background: rgb(255, 153, 66);
}

.sel_proto_class {
  background: #f04848;
  color: #fff;
}

/*评价*/

.discuss {
  width: 100%;
  border-top: 20rpx #eee solid;
  border-bottom: 20rpx #eee solid;
  flex-direction: column;
}

.discuss_title {
  flex-direction: row;
  justify-content: space-between;
  padding: 28rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #eee;
}

.discuss_title text {
  color: #555;
  font-size: 28rpx;
}

.look {
  flex-direction: row;
  justify-content: space-between;
}

.look image {
  margin: 6rpx 0 0 18rpx;
}

.discuss_list {
  padding: 28rpx;
  padding-bottom: 0;
  box-sizing: border-box;
  justify-content: space-between;
  flex-direction: row;
}

.discuss_left {
  flex-direction: column;
}

.discuss_user {
  flex-direction: row;
}

.discuss_user image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 45rpx;
  display: flex;
}

.discuss_user text {
  color: #555;
  font-size: 32rpx;
  line-height: 70rpx;
  margin-left: 25rpx;
}

.discuss_time {
  color: #555;
  font-size: 32rpx;
  line-height: 70rpx;
  margin-left: 24rpx;
}

.discuss_txt {
  color: #555;
  font-size: 32rpx;
  line-height: 70rpx;
  margin-top: 10rpx;
  margin-left: 24rpx;
  border-bottom: 1rpx solid #eee;
}

.discuss_txt text {
  text-align: left;
  color: #555;
  font-size: 32rpx;
  line-height: 70rpx;
  margin-left: 24rpx;
}

.rich_text {
  width: 100%;
  padding: 28rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.rich_text view, .rich_text text {
  display: flex !important;
  font-size: 25rpx !important;
  line-height: 1.5 !important;
  text-align: left !important;
  width: 100% !important;
  flex-direction: column !important;
  align-items: flex-start !important;
}

.rich_text image {
  width: 90% !important;
  display: block !important;
  margin: 15rpx auto !important;
}
