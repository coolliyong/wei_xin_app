/**index.wxss**/

image {
  width: 100%;
}

.container {
  display: flex;
  width: 100%;
  margin: 0 auto;
}

.search_txt {
  font-size: 28rpx;
  color: #555;
  margin-top: 45rpx;
}

.hide {
  display: none !important;
}

.moods_two {
  width: 100%;
  flex-direction: row;
  flex-wrap: wrap;
  background: #fff;
}

.moods_two .mood_main_right {
  flex-direction: column;
  margin-top: 28rpx;
}

.moods_two .mood_list {
  width: 332rpx;
  margin: 21rpx;
}

.main_list_two_list {
  width: 100%;
  flex-direction: column;
}

.moods_two .mood_main_left {
  width: 332rpx;
  height: 332rpx;
}

.moods_two .mood_main_left image {
  width: 332rpx;
  height: 332rpx;
}

.search {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  width: 100%;
  padding: 10rpx 28rpx;
  justify-content: center;
  overflow: hidden;
}

.search input {
  background: #f3f3f3;
  width: 545rpx;
  border-radius: 10rpx;
  padding-left: 65rpx;
  height: 52rpx;
}

.ico_search {
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  top: 21rpx;
  z-index: 888;
  left: 50rpx;
}

.search_btn {
  width: 135rpx;
  height: 52rpx;
  line-height: 52rpx;
  background: #f44b32;
  font-size: 24rpx;
  color: #fff;
  margin-left: 15rpx;
}

.slide_main {
  width: 100%;
  flex-direction: column;
  background: #f3f3f3;
}

.slide_tab {
  width: 100%;
}

.slide_btn {
  display: flex;
  width: 100%;
}

.slide_btn .slide_li {
  width: 188rpx;
  justify-content: center;
  align-items: center;
  margin-right: 4rpx;
  padding: 15rpx 0;
  color: #797979;
}

.slide_btn .sel_tab {
  color: #f04848;
  border-bottom: 3px solid red;
}

.slide_img {
  display: block;
  width: 100%;
  height: 292rpx;
}

swiper {
  width: 100%;
  height: 292rpx;
}

.new {
  width: 100%;
  height: 126rpx;
  overflow: hidden;
  position: relative;
}

.new_bg {
  width: 100%;
  height: 126rpx;
}

.new_text {
  position: absolute;
  top: 45rpx;
  left: 280rpx;
  color: #fdac09;
  font-size: 33rpx;
  letter-spacing: 20rpx;
}

.all_txt {
  width: 220rpx;
  text-align: center;
  position: absolute;
  left: 530rpx;
  top: 80rpx;
  color: #222;
  font-size: 26rpx;
}

.look_all {
  flex-direction: row;
}

.look_all navigator {
  display: flex;
  flex-direction: column;
}

.ico_next {
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  left: 700rpx;
  top: 80rpx;
}

/*新品主图*/

.new_main {
  width: 100%;
  display: flex;
  flex-direction: row;
  background: #fff;
}

.new_main_list {
  width: 33.3%;
  color: #454545;
  text-align: center;
  border: 28rpx solid #fff;
  box-sizing: border-box;
}

.new_main_list image {
  height: 270rpx;
}

.new_main_list>view {
  width: 100%;
  flex-direction: column;
}

.new_main_list .new_main_title {
  width: 193rpx;
  justify-content: center;
  align-items: center;
  font-size: 35rpx;
}

.new_main_list .new_main_title text {
  width: 193rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  justify-content: center;
  align-items: center;
  font-size: 35rpx;
}

.new_main_list .new_main_intro {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  justify-content: center;
  align-items: center;
  font-size: 35rpx;
}

.new_main_list .new_main_money {
  width: 100%;
  color: #f04848;
  font-size: 28rpx;
  justify-content: center;
  align-items: center;
}

.moods {
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #fff;
}

.moods .mood_list {
  display: flex;
  margin: 28rpx;
  height: 156rpx;
  overflow: hidden;
  width: 100%;
  flex-direction: column;
}

.mood_list navigator {
  width: 100%;
  display: flex;
  background: none;
  flex-direction: row;
}

.mood_main_left {
  width: 312rpx;
  height: 156rpx;
}

.mood_main_left image {
  width: 312rpx;
  height: 156rpx;
}

.moods .mood_main_right {
  width: 100%;
  flex-direction: column;
  margin-left: 70rpx;
}

.mood_main_right view {
  width: 100%;
  /*margin-bottom: 16rpx;*/
}

.mood_main_right .new_main_title {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 35rpx;
}

.new_main_info {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: left;
  font-size: 24rpx;
  color: #909090;
}

.mood_main_right .new_main_intro {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 35rpx;
}

.mood_main_right .new_main_money {
  width: 100%;
  color: #f04848;
  font-size: 28rpx;
}
