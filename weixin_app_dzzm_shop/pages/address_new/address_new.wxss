/*新增地址*/

image {
  width: 100%;
  height: 100%;
}

input {
  font-family: 'pingfang sc regular',
                 'Microsoft YaHei',
                 'Franklin Gothic Medium',
                 'Arial Narrow',
                 Arial,
                 sans-serif;
  padding: 0;
}

view {
  display: flex;
}

page {
  background: rgb(243, 243, 243);
}

.address {
  margin-top: 12rpx;
  flex-direction: row;
  flex-wrap: wrap;
}

.address text {
  font-size: 26rpx;
  color: #555;
  margin: 5rpx 0;
  line-height: 26rpx;
  margin-right: 5rpx;
}

.phones {
  flex-direction: column;
  text-align: right;
}

.phone text {
  color: #555;
  font-size: 26rpx;
  line-height: 26rpx;
}

.other_address {
  justify-content: flex-end;
  flex-direction: row;
  margin-top: 56rpx;
}

.other_address text {
  color: #f04848;
  font-size: 22rpx;
  line-height: 26rpx;
}

.other_ico {
  width: 15rpx;
  height: 26rpx;
  margin: 3rpx 0 0 15rpx;
}

.title_border {
  margin: 16rpx 0;
  flex-direction: row;
  height: 15rpx;
  width: 100%;
}

.bor_bottom {
  display: flex;
  height: 10rpx;
  width: 90rpx;
  margin: 0 15rpx;
}

.pay_info {
  flex-direction: column;
  width: 100%;
  background: #fff;
}

.pay {
  /*flex-direction: row;*/
  width: 100%;
  box-sizing: border-box;
  flex-direction: row;
  padding: 0 28rpx;
}

.pay_main {
  width: 100%;
  border-bottom: 1px solid #eee;
}

.txt {
  font-size: 28rpx;
  color: #555;
  line-height: 30rpx;
  /*text-justify: */
  text-align: justify;
  text-justify: inter-ideograph;
  margin: 28rpx 0;
}

.txt text {
  display: inline-flex;
  width: 170rpx;
  margin: 10rpx 0 0 0;
  text-align: right;
}

.txt .sel {
  width: 38rpx;
  height: 38rpx;
  margin: 3px 15rpx 0 0;
}

.txt input {
  font-size: 28rpx;
  color: #555;
  line-height: 28rpx;
  letter-spacing: 2rpx;
  width: 450rpx;
  text-overflow: ellipsis;
  overflow: hidden;
}

.save {
  width: 100%;
  margin-top: 28rpx;
  justify-content: center;
  background: #fff;
}

.save text {
  color: #555;
  font-size: 38rpx;
  margin: 18rpx 0;
  letter-spacing: 20rpx;
}

.section {
  display: flex;
  align-items: flex-end;
  flex-direction: row;
}

.section picker {
  margin: 0 15rpx;
}
